#include<iostream>
#define MAX 10
using namespace std;
int main(){
    int a[MAX];
    int choice,count=0;
    
    do{
    cout << "===== Menu =====";
    cout<<"\n1. Insert into array.";
    cout<<"\n2. Display elements of array.";
    cout<<"\n3. Update into array.";
    cout<<"\n4. Delete from array.";
    cout<<"\n5. Search in array.";
    cout<<"\n6. Display minimum value."; 
    cout<<"\n7. Display maximum value.";
    
    cout<<"\nEnter your choice:\n";
    cin>>choice;
    
    switch(choice){
        case 1:{
        	if(count>=MAX){
                cout<<"Array capacity full.";
                break;
            }
            cout<< "===Insert into array.=== (Shaiju Maharjan)\n";
            int element;
            cout<<"Enter element to insert:";
            cin>>element;
            a[count] = element;
            count++;
            cout << endl << endl;
            break;
		}
            
                
        case 2:{
        	if(count == 0){
                cout<<"No elements found in array."<<endl;
                break;
            }
            cout<<"===Display elements of array.=== (Shaiju Maharjan)\n";        
            for(int i=0;i<count;i++){
                cout<<a[i]<<" ";
            }
            cout << endl << endl;
            break;
		}
            
        
        case 3:{
        	if(count == 0){
                cout<<"No elements found in array."<<endl;
                break;
            }
            cout<<"===Update into array.=== (Shaiju Maharjan)\n";
            int position;
            cout<<"Enter position of array to update:"<<endl;
            cin>>position;
            position--;
            if(position>=count || position < 0){  
                cout<<"Invalid element";
                break;
            }
            int update;
            cout<<"Enter the elements to replace with the array";
            cin>>update;
            a[position] = update;
            cout << endl << endl;
            break;
		}
            
            
        case 4:{
        	if(count == 0){
                cout<<"No elements found in array."<<endl;
                break;
            }
            cout<<"===Delete from array.=== (Shaiju Maharjan)\n";
           	int del;
			cout<<"Enter position to delete:";
			cin>>del;
			del--;
			if(del>count){
				cout<<"Invalid"<<endl;
				break;
			}
			for(int i=del; i<=count;i++){
				a[i]=a[i+1];
				count--;
			}
			cout << endl << endl;
			break;
		}
                       
            
        case 5:{
        	if(count == 0){
        		cout<<"No elements found in array."<<endl;
        		break;
    		}
    		cout<<"===Search in array.=== (Shaiju Maharjan)\n";
    		int s;
    		cout<<"Enter a number:";
    		cin>>s;
			
    		int foundIndex = -1;   
			for(int i=0;i<count;i++){
				if(s == a[i]){
            		foundIndex = i;
            		cout<<"Found at index:"<< i <<endl;
            		break;
        		}
    		}

    		if(foundIndex == -1){  
        		cout<<"Not found"<<endl;
    		}
    		cout << endl << endl;
    		break;
		}
    

            
        case 6:{
			 if(count == 0){
                cout << "No elements found in array" << endl;
                break;
            }
            cout<<"===Display minimum value.=== (Shaiju Maharjan)\n"; 
            int min=a[0];
            for(int i=1;i<count;i++){
                if(a[i]<min){
                    min=a[i];
                }
            }
            cout<<"The minimum number is:"<<min;
            cout << endl << endl;
            break;
		}
           
            
        case 7:
		{
			 if(count == 0){
                cout << "No elements found in array" << endl;
                break;
            }
            cout<<"===Display maximum value.=== (Shaiju Maharjan)\n"; 
            int max=a[0];
            for(int i=1;i<count;i++){
                if(a[i]>max){
                    max=a[i];
                }
            }
            cout<<"The maximum number is:"<<max;
            cout << endl << endl;
            break;
		}
           
        
        default:
            cout<<"Please enter numbers between 1 to 8. Thank you!";
            cout << endl << endl;
            break;
        
    }
    }while(choice!=8);
    return 0;
}

